<odoo>

    <record id="view_hotel_customer_form" model="ir.ui.view">
        <field name="name">hotel.customer.form</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên khách hàng"/>
                        </h1>
                    </div>

                    <group string="Thông tin khách hàng">
                        <field name="identity_card"/>
                        <field name="phone"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hotel_customer_tree" model="ir.ui.view">
        <field name="name">hotel.customer.tree</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <tree default_order="name asc">
                <field name="name"/>
                <field name="identity_card"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="view_hotel_customer_search" model="ir.ui.view">
        <field name="name">hotel.customer.search</field>
        <field name="model">hotel.customer</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Tên khách hàng"/>
                <field name="phone" string="Số điện thoại"/>
                <field name="identity_card" string="CMND/CCCD"/>
            </search>
        </field>
    </record>

    <record id="action_hotel_customer" model="ir.actions.act_window">
        <field name="name">Khách hàng</field>
        <field name="res_model">hotel.customer</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
